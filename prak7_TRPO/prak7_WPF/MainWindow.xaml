<Window x:Class="prak7_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prak7_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Регистрация пользователя" FontSize="24" Grid.ColumnSpan="2" />

        <Label Content="Фамилия" Grid.Row="1" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Имя" Grid.Row="2" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Отчество" Grid.Row="3" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Профессия" Grid.Row="4" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Пароль" Grid.Row="5" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Подтверждение пароля" Grid.Row="6" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Margin="5, 5, 15, 5" TextChanged="NameBox_TextChanged"/>
        <TextBox x:Name="LastNameBox" Grid.Row="2" Grid.Column="1" Margin="5, 5, 15, 5" TextChanged="LastNameBox_TextChanged"/>
        <TextBox x:Name="MiddleNameBox" Grid.Row="3" Grid.Column="1" Margin="5, 5, 15, 5" TextChanged="MiddleNameBox_TextChanged"/>
        <TextBox x:Name="SpecialisationBox" Grid.Row="4" Grid.Column="1" Margin="5, 5, 15, 5" TextChanged="SpecialisationBox_TextChanged"/>
        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Grid.Row="5" Grid.Column="1" Margin="5, 5, 15, 5"/>
        <PasswordBox x:Name="TryPassBox" Grid.Row="6" Grid.Column="1" Margin="5, 5, 15, 5"/>

        <WrapPanel Grid.Row="7" Grid.Column="1" Background="LightGray" Margin="5" HorizontalAlignment="Center" DockPanel.Dock="Top" Width="520" Height="100">
            <Label Content="* Поле для пароля должно содержать минимум 8 символов." Margin="10"></Label>
            <Label Content="* Все поля обязательны." Margin="10"></Label>
        </WrapPanel>

        <Button Content="Сохранить" Grid.Row="8" Grid.Column="1" Width="150" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15" Click="Button_Click"/>
    </Grid>
</Window>
